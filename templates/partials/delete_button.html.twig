<form method="post" action="{{ path(route, {id: id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this item?'|trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button class="btn btn-sm btn-danger">
        {{ ux_icon('delete') }}
        {{ 'delete'|trans|capitalize }}
    </button>
</form>
