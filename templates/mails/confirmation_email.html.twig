{% extends "mails/base.html.twig" %}
{% trans_default_domain 'VerifyEmailBundle' %}
{% block body %}
<h1>{{ 'Hi! Please confirm your email!'|trans }}</h1>

<p>
    {{ 'Please confirm your email address by clicking the following link:'|trans }} <br><br>
    <a href="{{ signedUrl|raw }}">{{ 'Confirm my Email'|trans }}</a>.
    {{ 'This link will expire in'|trans }} {{ expiresAtMessageKey|trans(expiresAtMessageData) }}.
</p>

<p>{{ 'thanks'|trans([], 'messages')|capitalize }}</p>
{% endblock %}
