{% extends 'base.html.twig' %}

{% block title %}
	{{ title|trans([], 'security')|capitalize }}
	-
	{{ parent() }}
{% endblock %}

{% block body %}

	{% include "partials/page_title.html.twig" with {
        title: title|trans([], 'security'), 
        icon: 'reload',
    } %}
	<div class="card bg-light shadow mx-auto" style="max-width: 35rem;">
		<div class="card-body">
			{{ form_start(form) }}
			{{ form_row(form.email) }}
			<div class="d-grid mx-auto">
				<button class="btn btn-lg btn-primary" type="submit">
					{{ ux_icon('send', {width: '20', height: '20'}) }}
					{{ 'send'|trans|capitalize }}
				</button>
			</div>
			{{ form_end(form) }}
		</div>
		{% include "security/_card_footer.html.twig" %}
	</div>
{% endblock %}
