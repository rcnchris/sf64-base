{% extends 'base.html.twig' %}

{% block title %}
	{{ title|trans|capitalize }}
	-
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container">

		{% include "partials/page_title.html.twig" with {
			title: (title|trans ~ ' ' ~ app_name), 
			icon: 'home',
		} %}

		<twig:Alert title="{{ 'hello'|trans|capitalize }} {{ app.user ? app.user.firstname : null }}" content="OyÃ© les gens"/>

		<div class="row mt-3">
			<div class="col text-center">
				<a href="{{ path('security.login') }}" class="btn btn-lg btn-primary">
					{{ ux_icon('login', {width: '20', height: '20'}) }}
					{{ 'login'|trans|capitalize }}
				</a>
			</div>
			<div class="col text-center">
				<a href="{{ path('security.register') }}" class="btn btn-lg btn-success">
					{{ ux_icon('register', {width: '20', height: '20'}) }}
					{{ 'register'|trans|capitalize }}
				</a>
			</div>
			<div class="col text-center">
				<a href="{{ path('security.forgotten_password') }}" class="btn btn-lg btn-primary">
					{{ ux_icon('reload', {width: '20', height: '20'}) }}
					{{ 'forgotten password'|trans([], 'security')|capitalize }}
				</a>
			</div>
		</div>
	</div>
{% endblock %}
